        <h3 class="card-title">Product Title</h3>
        <p class="card-text">Product description goes here.</p>
        <button class="card-button">Buy now</button>
      </div>
    </div>
    <div class="card">
      <img src="/assets/Cabinet.png" alt="Product Image" class="card-image" />
      <div class="card-body">
        <h3 class="card-title">Product Title</h3>
        <p class="card-text">Product description goes here.</p>
        <button class="card-button">Buy now</button>
      </div>
    </div>
    <div class="card">
      <img src="/assets/Playroom.png" alt="Product Image" class="card-image" />
      <div class="card-body">
        <h3 class="card-title">Product Title</h3>
        <p class="card-text">Product description goes here.</p>
        <button class="card-button">Buy now</button>
      </div>
    </div>
  </div>
</div>

<script src="../scripts/scroll.js"></script>
<script src="../scripts/scrollcard.js"></script>

<style>
  @font-face {
    font-family: "dosis";
    src: url("../public/fonts/Dosis-VariableFont_wght.ttf") format("ttf");
  }
  @import url("https://fonts.googleapis.com/css2?family=Kodchasan:wght@700&display=swap");
  * {
    padding: 0;
    margin: 0;
  }

  main {
    padding: 0;
    margin-left: 0;
    display: grid;
    justify-items: center;
    align-items: center;
  }

  .quote {
    text-align: center;
    display: flex;
    align-items: center;
    width: 65ch;
    height: 70vh;
    margin: 0 auto;
    font-weight: bold;
    font-size: 34px;
    line-height: 1.5;
    color: lightgray;
    font-family: Arial, Helvetica, sans-serif;
  }

  h2 {
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    font-size: 54px;
    color: lightgray;
    margin-bottom: 0;
    padding-bottom: 0;
    padding-top: 2em;
  }

  .scroll-image {
    position: relative;
    left: 90px;
    top: -500px;
    transition: top 4s ease-in-out;
    opacity: 40%;
  }

  .scroll-image2 {
    position: relative;
    left: 220px;
    top: -500px;
    transition: top 3s ease-in-out;
    opacity: 40%;
    scale: 1.4;
  }

  .scroll-image3 {
    position: relative;
    left: 400px;
    top: -550px;
    transition: top 3s ease-in-out;
    opacity: 40%;
  }

  .scroll-image4 {
    position: relative;
    left: 600px;
    top: -500px;
    transition: top 4s ease-in-out;
    opacity: 40%;
  }

  .scroll-image:hover {
    opacity: 60%;
  }

  .scroll-image.active {
    top: -100px;
    /* change this value to adjust the distance the image moves */
  }

  .scroll-image2:hover {
    opacity: 60%;
  }

  .scroll-image2.active {
    top: -50px;
    /* change this value to adjust the distance the image moves */
  }

  .scroll-image3:hover {
    opacity: 60%;
  }

  .scroll-image3.active {
    top: -100px;
    /* change this value to adjust the distance the image moves */
  }

  .scroll-image4:hover {
    opacity: 60%;
  }

  .scroll-image4.active {
    top: -150px;
    /* change this value to adjust the distance the image moves */
  }

  .rotate-image {
    animation: rotate 30s linear infinite;
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(360deg);
    }
  }

  .video {
  position: relative;
  width: 100%;
  height: 100%;
}

.video iframe {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 80%;
  height: 80%;
  border: none;
  transform: translate(-50%, -50%);
}

.image-overlay {
  position: absolute;
  top: -130px;
  left: -120px;
  width: 1280px;
  height: 800px;
  pointer-events: none;
}

.image-overlay img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
  .inline {
    display: inline;
  }
  #cards-section {
    overflow: hidden;
    height: 640px;
  }
  .cards {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 55vh;
    margin: 0 auto;
    opacity: 0;
  }

  .card {
    width: 300px;
    height: 500px;
    margin: 0 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 60px;
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    margin-bottom: 20px;
    filter: invert(100%);
  }

  .card-body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .card-title {
    color: white;
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .card-text {
    color: white;
    font-size: 16px;
    text-align: center;
    margin-bottom: 20px;
  }

  .card-button {
    background-color: #ef9786;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease-in-out;
  }

  .card-button:hover {
    background-color: #ddd;
  }

  @keyframes cardPopUp {
    0% {
      transform: translateY(70%);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Apply the animation to the cards section when it's scrolled to */
  .cards.show {
    opacity: 1;
    animation: cardPopUp 1.5s ease-out forwards;
  }
</style>
